<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>demoservlets.LoginServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>Welcome</servlet-name>
    <servlet-class>demoservlets.Welcome</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>Welcome</servlet-name>
    <url-pattern>/Welcome</url-pattern>
</servlet-mapping>


<servlet>
    <servlet-name>Chat</servlet-name>
    <servlet-class>demoservlets.Chat</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>Chat</servlet-name>
    <url-pattern>/Chat</url-pattern>
</servlet-mapping>
    
    <servlet>
        <servlet-name>MessageResponse</servlet-name>
        <servlet-class>demoservlets.MessageResponse</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MessageResponse</servlet-name>
        <url-pattern>/MessageResponse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SecurityCheck</servlet-name>
        <servlet-class>demoservlets.SecurityCheck</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SecurityCheck</servlet-name>
        <url-pattern>/SecurityCheck</url-pattern>
    </servlet-mapping>



    <context-param>
        <param-name>message</param-name>
        <param-value>com.msql.jbc.driver</param-value>
    </context-param>

</web-app>